<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/creamwhite"
    android:orientation="vertical">

    <ScrollView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/Dopi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/creamwhite"
        tools:context=".MainActivity"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"

        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.91">

        <LinearLayout
            android:id="@+id/VnutriScrolla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/imagedop" />

            <TextView
                android:id="@+id/zagolovok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Work&amp;Control:"
                android:textColor="@color/darkblue"
                android:textSize="23dp" />

            <Button
                android:id="@+id/razrabBut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/darkblue"
                android:text="О разработчике"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/zagolovok2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Календарь:"
                android:textColor="@color/darkblue"
                android:textSize="23dp" />

            <Button
                android:id="@+id/holidaysBut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/darkblue"
                android:text="Праздники"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/FormClockBut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/darkblue"
                android:text="Формат времени"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/zagolovok3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Поддержка:"
                android:textColor="@color/darkblue"
                android:textSize="23dp" />

            <Button
                android:id="@+id/politicsBut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/darkblue"
                android:text="Политика конфидециальности"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/MassageBut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/darkblue"
                android:text="Сообщение в поддержку"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ObApps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"
                android:text="Дата: 2024"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ObApps2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:text="РГППУ"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ObApps3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:text="Екатеринбург"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ObApps4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:text="Машиностроителей, 11"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ObApps5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:text="Руководитель: Макеева Мария Александровна"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>